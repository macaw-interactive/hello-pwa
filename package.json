{
  "name": "hello-pwa",
  "version": "1.0.0",
  "description": "Proof of concept for a progressive web app",
  "author": "Macaw Interactive",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "express": "^4.16.3",
    "haversine": "^1.1.0",
    "nedb": "^1.8.0",
    "node-fetch": "^2.2.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.17.0",
    "react-toastify": "^4.2.0",
    "web-push": "^3.3.2"
  },
  "scripts": {
    "start-server": "node ./server/dist/server.js",
    "develop-server": "webpack --config server/webpack.config.js --watch",
    "start": "run-p start:*",
    "start:react": "node scripts/start.js",
    "start:scss": "npm run build:scss && node-sass-chokidar --include-path ./src/assets/css --include-path ./node_modules src/ -o ./src --watch --recursive",
    "build": "run-p build:*",
    "build:build-time": "node scripts/create-env-file.js",
    "build:react": "react-scripts-ts build && node ./scripts/generate-service-worker.js",
    "build:scss": "node-sass-chokidar --include-path ./src/assets/css --include-path ./node_modules src/ -o ./src",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "deploy": "npm run build && firebase deploy"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/nedb": "^1.8.5",
    "@types/node": "^10.9.4",
    "@types/node-fetch": "^2.1.2",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.0.1",
    "workbox-build": "^3.4.1"
  }
}
